          "email": "simon@mail.com",
          "employed": false,
          "profile_image": "https://image.ext",
          "created_at": "date",
          "updated_at": "date",
          "projects_participated_in": [],
          "own_projects": [],
          "followers": [],
          "following": [],
          "assigned_courses": [],
          "owned_courses": []
        }
      },
      "UserEmployed": {
        "value": {
          "id": "0ace079a-8dda-406d-a74f-ca823fc35236",
          "name": "Jeanette Carter",
          "email": "jeanette@mail.com",
          "employed": true,
          "profile_image": "https://image.ext",
          "created_at": "date",
          "updated_at": "date",
          "projects_participated_in": [],
          "own_projects": [],
          "followers": [],
          "following": [],
          "assigned_courses": [],
          "owned_courses": []
        }
      }
    },
    "responses": {
      "BadRequest": {
        "description": "BAD REQUEST",
        "content": {
          "application/json": {
            "examples": {
              "MissingFields": {
                "value": {
                  "error": {
                    "error": ["<field_1> is required", "<field_2> is required"]
                  }
                }
              },
              "MalformedPassword": {
                "value": {
                  "error": "password must have min 6 chars"
                }
              },
              "MalformedEmail": {
                "value": {
                  "error": "invalid email format"
                }
              }
            }
          }
        }
      },
      "Conflict": {
        "description": "CONFLICT",
        "content": {
          "application/json": {
            "example": {
              "error": "Key (field)=(field) already exists"
            }
          }
        }
      },
      "NoContent": {
        "description": "NoContent"
      },
      "Unauthorized": {
        "description": "UNAUTHORIZED",
        "content": {
          "aplication/json": {
            "examples": {
              "Token not informed": {
                "value": {
                  "error": "missing authorization header"
                }
              },
              "Invalid token": {
                "value": {
                  "error": "invalid token"
                }
              },
              "Missing token": {
                "value": {
                  "error": "token missing"
                }
              }
            }
          }
        }
      },
      "Forbidden": {
        "description": "FORBIDDEN",
        "content": {
          "aplication/json": {
            "example": {
              "Token not informed": {
                "value": {
                  "error": "permission denied"
                }
              }
            }
          }
        }
      },
      "Success": {
        "description": "SUCCESS",
        "content": {
          "aplication/json": {
            "example": {
              "SUCCESS": {
                "value": {
                  "ends_at": "YYYY-MM-DDTHH:MM:SS.MMMMZ",
                  "starts_at": "YYYY-MM-DDTHH:MM:SS.MMMMZ",
                  "description": "Aplicação usando o framework react e a biblioteca axios",
                  "name": "Aplicação web com react e axios",
                  "user_owner": {
                    "id": "0ace079a-8dda-406d-a74f-ca823fc35236",
                    "name": "Cleito Guerra",
                    "email": "cleitonguerra@mail.com",
                    "createdAt": "YYYY-MM-DDTHH:MM:SS.MMMMZ",
                    "updatedAt": "YYYY-MM-DDTHH:MM:SS.MMMMZ",
                    "employed": true
                  },
                  "id": "0ace079a-8dda-406d-a74f-ca823fc35236",
                  "created_at": "YYYY-MM-DDTHH:MM:SS.MMMMZ"
                }
              }
            }
          }
        }
      },
      "ProjectBadRequest": {
        "description": "BAD REQUEST",
        "content": {
          "application/json": {
            "examples": {
              "MissingFields": {
                "value": {
                  "error": ["<field_1> is required", "<field_2> is required"]
                }
              }
            }
          }
        }
      },
      "UnsuportedMediaType": {
        "description": "UNSUPORTED MEDIA TYPE",
        "content": {
          "application/json": {
            "examples": {
              "Unsuported media type sended": {
                "value": {
                  "error": "allowed mymetypes: 'image/jpeg', 'image/png','image/svg+xml', sended mimetype: image/gif"
                }
              }
            }
          }
        }
      },
      "JWTLogin": {
        "description": "Retorna o JWT ao usuário",
        "content" : {
          "aplication/json": {

{
  "openapi": "3.0.0",
  "info": {
    "title": "Sumé Free Share Documentation",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Dev Url"
    },
    {
      "url": "https://sume-free-share.herokuapp.com",
      "description": "Deploy Url"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "description": "Rota responsável pelo registro do usuário.",
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/UserRegisterBody"
              },
              "examples": {
                "UserRegisterBody": {
                  "$ref": "#/components/examples/UserRegisterBody"
                },
                "UserRegisterBodyEmployed": {
                  "$ref": "#/components/examples/UserRegisterBodyEmployed"
                }
              }
            },
            "multipart/form-data": {
              "schema": {},
              "example": {}
            }
          }
        },
        "responses": {
          "201": {
            "description": "CREATED",
            "content": {
              "aplication/json": {
                "schema": { "$ref": "#/components/schemas/User" },
                "examples": {
                  "User": {
                    "$ref": "#/components/examples/User"
                  },
                  "UserEmployed": {
                    "$ref": "#/components/examples/UserEmployed"
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          }
        }
      }
    },
    "/users/login":{
      "post":{
        "description":"Faz o login na aplicação",
        "requestBody":{
          "content": {
            "aplication/json": {
              "schema": {
                "$ref":"#/components/schemas/UserLoginBody"
              },
              "examples": {
                "UserLoginBody": {
                  "$ref": "#/components/examples/UserLoginBody"
                }
              }
            },
            "multipart/form-data": {
              "schema": {},
              "example": {}
          }
        }
      },
      "responses": {
        "200": {"$ref": "#/components/responses/JWTLogin"},
        "400": { "$ref": "#/components/responses/BadRequest" }
      }
    }
  },
    "/users": {
      "patch": {
        "description": "Rota responsável pelo update do usuário.",
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/UserUpdateBody"
              },
              "examples": {
                "UserUpdateBody": {
                  "$ref": "#/components/examples/UserUpdateBody"
                }
              }
            },
            "multipart/form-data": {
              "schema": {},
              "example": {}
            }
          }
        },
        "responses": {
          "204": { "$ref": "#/components/responses/NoContent" },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/Unauthorized" },
          "409": { "$ref": "#/components/responses/Conflict" }
        }
      }
    },
    "/users/image": {
      "patch": {
        "requestBody": {
          "content": {
            "multipar/form-data": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          }
        },
        "responses": {
          "204": { "$ref": "#/components/responses/NoContent" },
          "415": { "$ref": "#/components/responses/UnsuportedMediaType" }
        }
      }
    },
    "/project/:uuid": {
      "post": {
        "description": "Rota responsável pela criação de projetos",
        "requestBody": {
          "content": {
            "aplication/json": {
              "schema": {
                "$ref": "#/components/schemas/ProjectRegisterBody"
              }
            }
          }
        },
        "responses": {
          "201": { "$ref": "#/components/responses/Success" },
          "400": { "$ref": "#/components/responses/ProjectBadRequest" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "employed": {
            "type": "boolean",
            "default": false
          },
          "profile_image": {
            "type": "string"
          },
          "created_at": {
            "type": "string"
          },
          "updated_at": {
            "type": "string"
          },
          "projects_participated_in": {
            "type": "array"
          },
          "own_projects": {
            "type": "array"
          },
          "followers": {
            "type": "array"
          },
          "following": {
            "type": "array"
          },
          "assigned_courses": {
            "type": "array"
          },
          "owned_courses": {
            "type": "array"
          }
        }
      },
      "UserLoginBody": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "example": "jeanette@mail.com"
          },
          "password": {
            "type": "string",
            "example": "123456",
            "minLength": 6
          }
        }
      },
      "UserRegisterBody": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Jeanette Carter"
          },
          "email": {
            "type": "string",
            "example": "jeanette@mail.com"
          },
          "password": {
            "type": "string",
            "example": "123456",
            "minLength": 6
          },
          "employed": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "UserUpdateBody": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Jeanne d'Arc"
          },
          "email": {
            "type": "string",
            "example": "jalter@mail.com"
          },
          "password": {
            "type": "string",
            "example": "Pass@1234",
            "minLength": 6
          },
          "employed": {
            "type": "boolean",
            "default": false
          }
        }
      },
      "ProjectRegisterBody": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "example": "Aplicação web com react e axios"
          },
          "description": {
            "type": "string",
            "example": "Aplicação usando o framework react e a biblioteca axios"
          },
          "starts_at": {
            "type": "string",
            "example": "2022-04-29"
          },
          "ends_at": {
            "type": "string",
            "default": "2022-05-29"
          },
          "id_category": {
            "type": "string",
            "default": "48f5ba49-5164-492a-8963-52ec42443908"
          }
        }
      },
      "UserReviewBody":{
        "type": "object",
        "required": ["id_reviewer", "id_course", "comment", "rating"],
        "properties": {
          "id_reviewer": {
            "type": "string",
            "example": "48f5ba49-5164-492a-8963-52ec42443908"
          },
          "id_course": {
            "type": "string",
            "example": "48f7ba49-5294-5c34-8063-52ab42426908"
          },
          "comment": {
            "type": "string",
            "example": "Muito bom, recomendo!!"
          },
          "rating": {
            "type": "number",
            "example": 4.9
          }
      }
    }
  },
    "examples": {
      "UserLoginBody": {
        "value": {
          "email": "simon@mail.com",
          "password": "123456"
        }
      },
      "UserRegisterBody": {
        "value": {
          "name": "Simon Ziemann",
          "email": "simon@mail.com",
          "password": "123456"
        }
      },
      "UserRegisterBodyEmployed": {
        "value": {
          "name": "Jeanette Carter",
          "email": "jeanette@mail.com",
          "password": "123456",
          "employed": true
        }
      },
      "UserUpdateBody": {
        "value": {
          "name": "Cleiton Guerra",
          "email": "cleitonguerra@mail.com",
          "password": "Pass@1234",
